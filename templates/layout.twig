<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <meta name="author" content="{{ author|default(site.author) }}">
    <meta name="keyword" content="{{ keyword|default(site.keyword) }}">
    <meta name="description" content="{{ description|default(site.description) }}">
    <link rel="icon" href="#">

    <title>{{ title }}</title>

    {% for css in statics.css %}
        <link href="{{ css }}" rel="stylesheet">
    {% endfor %}
    {% block css %}
        {# 额外添加的css #}
    {% endblock %}
    <![endif]-->
</head>
<body>

{% block navbar %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{base_url()}}">{{ site.title }}</a>
            </div>

            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">

                    {% for item in menus %}
                        <li class="{% if item.name == current_menu[0] %}active{% endif %}"><a href="{{ item.url }}">{{ item.name }}</a></li>
                    {% endfor %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">留着 <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">参考用</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">哈哈</li>
                            <li><a href="#">说不定</a></li>
                            <li><a href="#">用得上</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->

            {#<div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Dashboard</a></li>
                    <li><a href="#">Settings</a></li>
                    <li><a href="#">Profile</a></li>
                    <li><a href="#">Help</a></li>
                </ul>
                <form class="navbar-form navbar-right">
                    <input type="text" class="form-control" placeholder="Search...">
                </form>
            </div>#}
        </div>
    </nav>
{% endblock %}

<div class="container-fluid">
    <div class="row">
        {% block leftnavi %}
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    {% for item in menus[current_menu[0]]['sub'] %}
                        <li class="{% if item.name == current_menu[1] %}active{% endif %}"><a href="{{ item.url }}">{{ item.name }}</a></li>
                    {% endfor %}
                </ul>
                <ul class="nav nav-sidebar">
                    <li><a href="">Nav item</a></li>
                </ul>
            </div>
        {% endblock %}
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        {% block container %}
            <div class="container-fluid" style="text-align: center;padding:20%"><h1>啥也没有- -！....</h1></div>
        {% endblock %}
        </div>
    </div>
</div>

{% block footer %}
    <!-- 尾部start -->
    <footer id="copyright" class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main text-right">
        <p>{{ site.copyright|raw }} | {{ site.icp|raw }} | 联系人：{{ site.contact|raw }}</p>
    </footer>
    <!-- 尾部end -->
{% endblock %}

{% for js in statics.js %}
    <script src="{{ js }}"></script>
{% endfor %}

{% block script %}
    {# js代码 #}
{% endblock %}
<!-- Piwik -->
<script type="text/javascript">
    var _paq = _paq || [];
    /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
    _paq.push(['trackPageView']);
    _paq.push(['enableLinkTracking']);
    (function() {
        var u="//piwik.istimer.com/";
        _paq.push(['setTrackerUrl', u+'piwik.php']);
        _paq.push(['setSiteId', '1']);
        var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
        g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
    })();
</script>
<!-- End Piwik Code -->
</body>
</html>
