{% block script %}
    <script>
        $("#input").keydown(function (event) {
            $("#input").val(event.key);
            var keyCode = event.keyCode;
            $('td.keycode').each(function (i, obj) {
                var code = parseInt($(obj).text());
                if (keyCode == code) {
                    $(obj).addClass('keycode-bg');
                    $(obj).prev().addClass('keycode-bg');
                    return false;
                }
            });
            $("#keycode").text(keyCode);
            $("#code").text(event.originalEvent.code);
            return false;
        });
        $('#clear-bth').click(function () {
            $('td.keycode').removeClass('keycode-bg');
            $('td.keycode').prev().removeClass('keycode-bg');
            $("#input").focus();
            return false;
        })
    </script>
{% endblock %}